page {
  background-color: rgb(242,242,242);
}
.top-nav-tab-container {
  display: flex;
  justify-content: space-between;
  background-color: #fff;
  margin-bottom: 0.5rem;
}
.top-nav-tab-container > navigator {
  padding: 0.8rem 1rem;
}

/* 全部、过期 */
.allOrOutOfTime {
  display: flex;
  justify-content: flex-start;
  background-color: #fff;
}
.allOrOutOfTime > navigator {
  padding: 0.8rem 1rem;
}

/* 列表渲染 */
.list-container > view{
  display: flex;
  justify-content: space-between;
  border: 1px solid red;
  width: 680rpx;
  margin: 0 auto;
}

/* 剩余天数 */
.days-left {
  display: inline-block;
  background-color: rgb(230,45,45);
  padding: 5px 10px;
  font-size: 12px;
  color: #fff;
}
.icon-lajitong {
  color: rgb(230,45,45);
  font-size: 1.2rem;
}
.del-btn {
  padding: 0.1rem;
  display: inline;
}