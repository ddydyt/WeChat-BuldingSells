/**index.wxss**/
/* 背景颜色 */
.bgContainer {
  background-color: #f2f2f2;
}

.head-nav-container {
  border: 1px solid red;
  display: flex;
  justify-content: space-between;
  padding: 3px 15px;
  margin-top: 7px;
}
.searchInput-container {
  border: 1px solid blue;
  width: 80%;
  padding: 2px 0;
}

.thirdBtn-container {
  display: flex;
  justify-content: space-between;
  background-color: #fff;
  margin-top: 12px;
  padding: 1rem  ;
}

.swiper-container {
  width: 100%;
  margin-top:12px;
}
.swiper-container image {
  width: 100%;
}
.pubMessage {
  margin-top: 12px;
  padding: 8px 1rem;
  background-color: #fff;
}
.icon-tongzhi {
  margin-right: 5px;
  color: rgb(216,30,6);
}
.tuijian-container {
  margin-top: 12px;
  background-color: #fff;
  box-sizing: border-box;
  padding: 6px 8.5px 0 8.5px;
}

.tuijian-title {
  height: 1.5rem;
  line-height: 1.5rem;
  padding-left: 8px;
  border-left: 5px solid #1A76BC;
  color: #1A76BC;
  font-weight: 700;
  border-bottom: 1px solid #ccc;
}

.for-items {
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1px solid #ccc;
  padding: 0.8rem 0;
}

.items-picContainer {
  width: 8rem;
  height: 5rem;
  overflow: hidden;
}
.items-picContainer > image {
  width: 100%;
  height: 100%;
}
.items-detail-container {
  width: 10.5rem;
  height: 6rem;
  font-size: 14px;
  box-sizing: border-box;
  padding-top: 8px;
}
.list-btn-container {
  width: 100%;
  display: flex;
}
.btn {
  width: unset;
  padding: 6px 15px;
  font-weight: 500;
}
.tuijianBtn {
  background-color: #fff;
  border: 1px solid #E62F2F;
  border-radius: 18px;
  color: #E62F2F;
  font-size: 12px;
}

/* 套用居中样式 */
.custom-ticket-container {
  border-radius: 50%;
  width: 3rem;
  height: 3rem;
  display: flex;
  justify-content: center;
  align-items: center;
  margin: 0 auto;
  margin-bottom: 8px;
}
.custom-ticket-container> text {
  font-size: 2.1rem;
  color: white;
}
.thirdBtn-container > navigator {
  text-align: center;
}

/* 我的客户 */
.my-kehu {
  background-color: rgb(255,153,0);
}
.my-ticket {
  background-color: rgb(255,102,0);
}
.loupan-predict {
  background-color: rgb(204,102,255);
}